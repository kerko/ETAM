\usepackage{tabularx}

%-------------------------------------------------------------------------------
%                \addtitle command: add a footer
%-------------------------------------------------------------------------------

\newcommand\revhead{
\begin{tabularx}{\textwidth}{|X|X|X|X|}
\hline
\textbf{Version} & \textbf{Author} & \textbf{Date} & \textbf{Description} \\
  \hline 
\end{tabularx}
}

\newcommand\addrev[4]{
	\begin{tabularx}{\textwidth}{|X|X|X|X|}
	#1 & #2 & #3 & #4 \\
	  \hline 
\end{tabularx}
}


%-------------------------------------------------------------------------------
%                Definition of the use case environment
%-------------------------------------------------------------------------------
\newenvironment{revision}{\revhead}
{}
